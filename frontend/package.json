{
  "name": "telemedicine",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "install": "^0.13.0",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "npm": "^6.14.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-feather": "^2.0.3",
    "react-lazy-load": "^3.0.13",
    "react-progressbar": "^15.4.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "sass": "^1.54.3",
    "socket.io-client": "^2.3.0"
  },
  "scripts": {
    "start": "set PORT=3001 && react-scripts start css-watch",
    "build": "react-scripts build && copy build\\index.html build\\404.html",
    "build-linux": "react-scripts build && cp build/index.html build/404.html && rm build/static/js/*.map build/static/css/*.map",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "css-build": "node-sass --omit-source-map-url sass/custom.scss src/App.css",
    "css-watch": "npm run css-build -- --watch",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "prettier-fix": "prettier --write '**/*.js'",
    "prettier-check": "prettier --list-different '**/*.js'",
    "lint-fix": "eslint --fix .",
    "lint-check": "eslint ."
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^2.2.0",
    "prettier": "^2.0.4"
  },
  "proxy": "http://localhost:3000"
}
